{% extends 'layout.njk' %}

{% block content %}

  <div class="card">
    <section class="avatar" style="background: url(https://source.unsplash.com/collection/9419482/900x900) no-repeat center center / cover"></section>

    <section class="details">

      <form  method="post" action="/members?_method=PUT">

        <h3>Editar Members</h3>

        {% include 'members/fields.njk' %}

        <input type="hidden" name="id" value={{members.id}}>

      </form>

      <form id="form-delete" action="/members?_method=DELETE" method="post">
        <input type="hidden" name="id" value={{members.id}}>
        <button type="submit">Deletar</button>
      </form>

    </section>
  </div>

{% endblock content %}